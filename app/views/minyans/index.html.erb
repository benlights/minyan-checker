<p id="notice"><%= notice %></p>

<h1>Minyans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Location</th>
      <th>Notification time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minyans.each do |minyan| %>
      <tr>
        <td><%= minyan.name %></td>
        <td><%= minyan.time.strftime("%I:%M %p") %></td>
        <td><%= minyan.location %></td>
        <td><%= minyan.notification_time.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Show', minyan %></td>
        <td><%= link_to 'Edit', edit_minyan_path(minyan) %></td>
        <td><%= link_to 'Destroy', minyan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

